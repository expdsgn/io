/**
 * Dependencies
 */

@require 'grid.vars.styl';


/**
 * Reset
 */

button, input,
select, textarea
    margin 0
    font-size 100%
    vertical-align middle
    text-overflow ellipsis
    border none
    box-sizing border-box

input[placeholder]
    text-overflow ellipsis

input:disabled,
input:read-only
    pointer-events none

::-moz-placeholder
    text-overflow ellipsis

input:-moz-placeholder
    text-overflow ellipsis

button, input
    line-height normal

input::-moz-focus-inner,
button::-moz-focus-inner
    padding 0
    border 0

button,
input[type="reset"],
input[type="submit"]
html input[type="button"]
    -webkit-appearance button
                cursor pointer

select, button,
input[type="button"],
input[type="reset"],
input[type="submit"],
input[type="radio"],
input[type="checkbox"]
    cursor pointer

input[type="search"]
    box-sizing content-box
    -webkit-appearance textfield

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button
    -webkit-appearance none

textarea
    overflow auto
    vertical-align top
    height auto
    max-width 100%
    box-sizing border-box

/* End Form Reset */


select, textarea, input, label
    color inherit
    font-size 13px
    line-height 18px
    vertical-align middle
    background-color inherit
    display inline-block
    min-height 18px
    padding 4px 6px

label
    padding 0
    font-size inherit
    line-height inherit
    vertical-align: inherit;

textarea:focus, input:focus
    outline none

.input-small
    font-size: 14px;
    line-height: 20px;
    text-indent 20px
    padding margins 0 margins + 1

.input-medium
    font-size: 18px;
    line-height: 26px;
    text-indent 20px
    padding margins 0 margins + 1

.input-large
    font-size 22px
    line-height 40px
    text-indent 20px
    padding margins 0 margins + 1

textarea.input-small,
textarea.input-medium,
textarea.input-large
    text-indent 0;
    padding 20px

.input-full
    width 100%

